@model Test.Models.AccountTable;
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}





<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>

        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        .input-container {
            display: -ms-flexbox; /* IE10 */
            display: flex;
            width: 100%;
            margin-bottom: 15px;
        }

        .icon {
            padding: 10px;
            background: darkblue;
            color: white;
            min-width: 50px;
            text-align: center;
        }

        .input-field {
            width: 100%;
            padding: 10px;
            outline: none;
        }

            .input-field:focus {
                border: 2px solid dodgerblue;
            }

        /* Set a style for the submit button */
        .btn {
            background-color: darkblue;
            color: white;
            padding: 15px 20px;
            border: none;
            cursor: pointer;
            width: 100%;
            opacity: 0.9;
        }
    </style>


</head>
<body>
    <div class="col-md-12">


        @*<div class="col-md-6" style="background-color:lightgoldenrodyellow;border:4px solid #E51309">*@
        <div class="form-horizontal">
            @using (Html.BeginForm("AccountTable1", "AccountTable1"))
            {
                <div class="m-content">
                    <form asp-action="Create">


                        <div class="col-md-offset-3 col-md-6, col-sm-offset-2 col-sm-6">
                            <center>
                                <img src="~/images/images.jpg" style="height:60%;width:60%" />
                            </center>
                            <div class="form-group" style="align-content:center">
                                @*<label asp-for="UserName" class="col-md-2 control-label"></label>*@
                                <div class="input-container">
                                    <i class="fa fa-user icon"></i>
                                    <input asp-for="UserName" class="form-control" placeholder="Username" />

                                </div>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-group" style="align-content:center">
                                @*<label asp-for="Password" class="col-md-2 control-label"></label>*@
                                <div class="input-container">
                                    <i class="fa fa-key icon"></i>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Password" />

                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>


                            <div class="form-group">

                                <input type="submit" value="Login" class="btn green btn-block" style="background-color:darkblue;font-size:medium" />
                            </div>
                            <div style="color:red">
                                <b>  @ViewBag.Message</b>
                            </div>

                        </div>

                    </form>
                </div>
            }
        </div>

    </div>

</body>
</html>

